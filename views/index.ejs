<div class="container-fluid" id="theApp" >

    <div class="row-fluid page" id="page-main">
        <div class="row-fluid" id="pnl-map" >
            <div class="span12">
                <div id="gmap-container">

                    <button class="btn" id="btn-curLoc">
                        <i class="icon-map-marker"> </i>
                    </button>

                    <div id="gmap">
                    </div>
                </div>
            </div>
        </div>

        <div id="pnl-results">

        </div>

    </div>

    <div class="row-fluid page hide" id="page-photo">
        <div class="row-fluid" id="photo-view" >
            <div class="span12">
                <img src="" id="theImage"/>
            </div>
        </div>
        <div class="row-fluid">
          Follow the settings to be awesome!
        </div>
        <div class="row-fluid">
           <img src="/img/time_icon.png"/> Time: <div class="detailData" id="time">XY</div>
           <img src="/img/date_icon.png"/> Date: <div class="detailData" id="date">XY</div>
        </div>
         <div class="row-fluid">
            <img src="/img/venue_icon.png"/> Venue: <div class="detailData" id="location">XY</div>
         </div>
         <div class="row-fluid">
            <img src="/img/filter_icon.png"/> Filter: <div class="detailData" id="filter">XY</div>
            <img src="/img/like_icon.png"/> Likes: <div class="detailData" id="likes">XY</div>
         </div>
         <div class="row-fluid">
            <img src="/img/tag_icon.png"/> Tags: <div class="detailData" id="tags">XY</div>
         </div>

        <div class="row-fluid">
          <a href="#page-main" class="btn btn-info">back to map</a>
          <a href="#direction" class="btn btn-info">take me there</a>
        </div>
    </div>

</div>


<script type="text/javascript">
    $( function() {
        var app = new PHR.App({el:'theApp'});
        Backbone.history.start({pushState: false, root: "/"})
    });
</script>

<script id="tpl_spot_row" type="text/html">
    <h2 class="spot-name">{{name}}</h2>
    <div class="more"><i class="icon-chevron-right icon-white"> </i></div>

    <div class="scroll-pane">

        {{#images}}
        <div class="spot-result">
            <a href="#page-photo/{{id}}"><img src="{{thumbUrl}}" /></a>
        </div>
        {{/images}}
    </div>

</script>

<script id="tpl_spot_result" type="text/html">
    <a href="#page-photo/{{id}}"><img src="{{thumbUrl}}" /></a>
</script>


          