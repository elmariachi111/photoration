<div class="container-fluid" id="theApp" >

    <div class="row-fluid page" id="page-main">
        <div class="row-fluid" id="pnl-map" >
            <div class="span12">
                <div id="gmap-container">

                    <button class="btn" id="btn-curLoc">
                        <i class="icon-map-marker"> </i>
                    </button>

                    <div id="gmap">
                    </div>
                </div>
            </div>
        </div>

        <div id="pnl-results">

        </div>

    </div>

    <div class="row-fluid page hide" id="page-photo">
        <div class="row-fluid" id="photo-view" >
            <div class="span12">
                <img src="" id="theImage"/>

                <a href="#page-main">back to map</a>
            </div>
        </div>
    </div>

</div>


<script type="text/javascript">
    $( function() {
        var app = new PHR.App({el:'theApp'});
        Backbone.history.start({pushState: false, root: "/"})
    });
</script>

<script id="tpl_spot_row" type="text/html">
    <h2 class="spot-name">{{name}}</h2>
    <div class="scroll-pane"> {{images.offset}}
        {{#images}}
        <div class="spot-result">
            <a href="#page-photo/{{id}}"><img src="{{thumbUrl}}" /></a>
        </div>
        {{/images}}
    </div>

</script>

<script id="tpl_spot_result" type="text/html">
    <a href="#page-photo/{{id}}"><img src="{{thumbUrl}}" /></a>
</script>


          