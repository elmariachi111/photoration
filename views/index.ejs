<div class="container-fluid" id="theApp" style="" >
    <div class="header">
        <img src="/img/logo.png" />
    </div>
    <div class="row-fluid page" id="page-main">
        <div class="row-fluid" id="pnl-map" >
            <div class="span12">
                <div id="gmap-container">
                    <div id="gmap">
                    </div>
                </div>
            </div>
        </div>
        <div class="row-fluid inter" style="background-color: #ff3e3f;">
            Sightseeing spots nearby
        </div>
        <div class="row-fluid" id="loading" style="display:none;">
            <div class="span12">
                LOADING
            </div>
        </div>

        <div id="pnl-results">

        </div>
        <div class="row-fluid">
            <div class="span12">
                <button id="btn-loadmore-venues" class="hide btn btn-primary btn-block">
                    load more venues
                    </button>
            </div>
        </div>
    </div>

    <div class="row-fluid page hide" id="page-photo">
        <div class="row-fluid">
            <a href="#page-main" class="btn-block btn btn-info">back to map</a>
        </div>
        <div class="row-fluid" id="photo-view" >
            <div class="span12" id="theImage">
            </div>
        </div>
        <div class="row-fluid">
            <div id="gmap-container2">
                <div id="gmap2">
                </div>
            </div>
        </div>
        <div class="row-fluid inter" style="background-color: #00bda1;">
            This photo has been taken with these settings:
        </div>
        <div id="theSettings" class="row-fluid">
            <ul>

            </ul>
        </div>

        <div class="row-fluid">
          <a href="#page-main" class=" btn-block btn btn-info">back to map</a>
        </div>
    </div>


</div>


<script type="text/javascript">
    $( function() {
        var app = new PHR.App({el:'theApp'});
        Backbone.history.start();
    });
</script>

<script id="tpl_spot_row" type="text/html">
    <h2 class="spot-name">{{name}}</h2>

    <div class="scroll-pane">
        {{#extPictures.eyeemAlbum.photos.items}}
            {{> tpl_spot_result }}
        {{/extPictures.eyeemAlbum.photos.items}}
    </div>

</script>

<script id="tpl_spot_result" type="text/html">
    <div class="spot-result" data-target="#page-photo/{{id}}" style="background-image:url('{{thumbUrl}}');">

    </div>
</script>

<script id="tpl_photo_settings" type="text/html">
    {{#settings}}
        <li class="span3"><img src="{{icon}}"/>  <div class="detailData" >{{value}}</li>
    {{/settings}}
</script>



          